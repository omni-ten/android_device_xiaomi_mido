typeattribute mm-qcamerad binder_in_vendor_violators;
allow mm-qcamerad camera_socket:dir rw_dir_perms;
allow mm-qcamerad camera_socket:sock_file { create unlink };
allow mm-qcamerad persist_sensors_file:file rw_file_perms;
allow mm-qcamerad sysfs:file { open read };
allow mm-qcamerad sysfs_graphics:file { open read };
allow mm-qcamerad camera_prop:file { open read getattr };

set_prop(mm-qcamerad, vendor_camera_prop);
binder_use(mm-qcamerad);

allow mm-qcamerad sensorservice_service:service_manager find;

allow mm-qcamerad system_server:unix_stream_socket { read write };
